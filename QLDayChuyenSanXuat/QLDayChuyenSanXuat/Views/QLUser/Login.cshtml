<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Classic Login Form</title>
    <link rel="stylesheet" href="~/Content/login-style.css" />
    <style>
        body {
            background-color: #ccf5ff;
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            width: 400px;
            text-align: center;
        }

            .login-container h1 {
                font-size: 28px;
                margin-bottom: 20px;
            }

        .login-form {
            text-align: left;
            width:100%;
        }

            .login-form h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

            .input-group input {
                width: 100%;
                padding: 10px 40px 10px 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .input-group i {
                position: absolute;
                top: 10px;
                right: 10px;
                color: #999;
            }

        .login-form a {
            display: block;
            text-align: right;
            margin-bottom: 20px;
            color: #007bff;
            text-decoration: none;
        }

        .login-form button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            width: 100%;
            max-width:100%;
        }
        .input-group input,
        .login-form button {
            width: 100%;
            box-sizing: border-box;
            align-items: center;
        }
       
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Đăng nhập</h1>
        <div class="login-form">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    <input type="text" placeholder="ADID" name="ADID" />
                    <i class="fa fa-user"></i>
                </div>
                <div class="input-group">
                    <input type="password" placeholder="Password" name="Password" />
                    <i class="fa fa-lock"></i>
                </div>
                <button type="submit">Đăng nhập</button>
            }
        </div>
        @ViewBag.loi
    </div>
</body>
</html>